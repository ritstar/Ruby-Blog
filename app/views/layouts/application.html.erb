<style>
  
  #logo{
    float: left;
    font-size: 1.7em;
    color: rgb(100,2,3);
    text-transform: uppercase;
    letter-spacing: -1px;
    font-weight: bold;

  }
</style>
  </head>

  <body>
    <%= render 'layouts/navigationcontrol' %>
    
    <% flash.each do |name, msg| %>
      <ul>
        <li>
          <% msg %>
        </li>
      </ul>


    <% end %>
    <%= yield %>
  </body>
</html>
